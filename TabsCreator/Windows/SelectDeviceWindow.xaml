<Window x:Class="TabsCreator.Windows.SelectDeviceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TabsCreator.Windows"
        mc:Ignorable="d"
        Title="SelectDeviceWindow" Height="300" Width="300">
    <Grid>
        <ListBox x:Name="listBox" HorizontalAlignment="Left" Height="150" Margin="10,59,0,0" VerticalAlignment="Top" Width="272" MouseDoubleClick="ListBox_OnMouseDoubleClick"/>
        <Button x:Name="OKButton" Content="OK" HorizontalAlignment="Left" Margin="43,234,0,0" VerticalAlignment="Top" Width="75" Click="OKButton_Click"/>
        <Button x:Name="CancelButton" Content="Cancel" HorizontalAlignment="Left" Margin="175,234,0,0" VerticalAlignment="Top" Width="75" Click="CancelButton_Click"/>
        <Label x:Name="label" Content="Available Devices:" HorizontalAlignment="Left" Margin="10,34,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.403,-0.047" Width="108"/>

    </Grid>
</Window>
